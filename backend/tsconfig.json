// tsconfig.json
{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node", "express"],
    "resolveJsonModule": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
  },
  "include": ["src"]
}

